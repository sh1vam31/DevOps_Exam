pipeline{
    agent any
    tools{
        maven 'maven'
    }
    stages{
        stage('CheckOut'){
            steps{
                git url:"https://github.com/sh1vam31/DevOps_Exam.git",branch:'main'
            }
        }
        stage('install'){
            steps{
                // sh 'mvn clean package'
                sh 'npm install'
            }
        }
        stage('test'){
            steps{
                // sh 'mvn test'
                sh 'npm test || echo "No tests defined"'
            }
        }
        stage('Build'){
            steps{
                // sh 'npm test || echo "No tests defined"'
                sh 'npm run build'
            }
        }
    }
}


















































